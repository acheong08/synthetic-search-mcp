{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"moduleDetection": "force",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist",
		"resolveJsonModule": true,
		"noEmit": false
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "dist"]
}
